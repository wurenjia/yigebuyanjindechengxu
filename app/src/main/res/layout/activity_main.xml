<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/projectData_tv_main"
        android:layout_width="0dp"
        android:layout_height="103dp"

        android:layout_marginEnd="10dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="15dp"
        android:background="#e2e4e4e4"
        android:text="\n  TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <Button
        android:id="@+id/getdata_btn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:text="请求数据"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projectData_tv_main" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fengshan_gif_main"
        android:layout_width="104dp"
        android:layout_height="82dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/fengshan02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tempNow_tv_main"
        android:layout_width="91dp"
        android:layout_height="44dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="26.9℃"
        android:textColor="#d810ab62"
        android:textSize="28dp"
        app:layout_constraintStart_toEndOf="@+id/fengshan_gif_main"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="16dp"
        android:hint="当前温度："
        app:layout_constraintStart_toEndOf="@+id/fengshan_gif_main"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="342dp"
        android:layout_height="101dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:background="#bfdfdfdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fengshan_gif_main">

        <Button
            android:id="@+id/autoControl_close_btn_main"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="14dp"
            android:text="关闭自动模式"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/autoControl_open_btn_main" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="手\n动\n控\n制"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/fengshan_btn_close_main"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="25dp"
            android:text="手动关闭"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/fengshan_btn_open_main" />

        <Button
            android:id="@+id/fengshan_btn_open_main"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="8dp"
            android:text="手动开启"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="58dp"
            android:layout_marginTop="8dp"
            android:text="自\n动\n控\n制"
            app:layout_constraintStart_toEndOf="@+id/fengshan_btn_close_main"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/autoControl_open_btn_main"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="8dp"
            android:text="开启自动模式"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="368dp"
        android:layout_height="180dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="16dp"
            android:text="下限："
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/minTemp_et_main"
            android:layout_width="66dp"
            android:layout_height="39dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="10"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/maxTemp_et_main" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="℃"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/minTemp_et_main"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="阈值设定:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="19dp"
            android:text="上限："
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <EditText
            android:id="@+id/maxTemp_et_main"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="number"
            android:text="35"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="℃"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/maxTemp_et_main"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/zhishi_iv_main"
            android:layout_width="120dp"
            android:layout_height="119dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="31dp"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/maxminSet_btn_main"
            android:layout_width="107dp"
            android:layout_height="51dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="28dp"
            android:text="设置"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/toSGG_btn_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="1dp"
        android:text="进入舵机操作"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projectData_tv_main" />

</android.support.constraint.ConstraintLayout>